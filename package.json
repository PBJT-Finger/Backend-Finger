{
  "name": "backend-finger",
  "version": "1.0.0",
  "description": "Backend system for managing campus attendance records.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:setup": "mysql -u root -padmin finger_db < seeds/dummy.sql",
    "db:reset": "mysql -u root -padmin finger_db < seeds/dummy.sql",
    "db:import-today": "mysql -u root -padmin finger_db < seeds/insert_today_data.sql",
    "migrate:legacy": "node scripts/migrate-legacy-employees.js",
    "seed:device-mapping": "node scripts/seed-device-mapping.js",
    "verify:migration": "node scripts/verify-migration.js",
    "cleanup:dummy": "node scripts/cleanup-dummy-employees.js",
    "employee:add": "node scripts/add-new-employee.js",
    "device:test": "node scripts/test-device-connection.js",
    "sync:attendance": "node scripts/sync-attendance.js",
    "lint": "eslint \"src/**/*.js\" \"*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" \"*.js\" --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.js\""
  },
  "dependencies": {
    "@prisma/client": "6",
    "@scalar/api-reference": "^1.43.8",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "ejs": "^4.0.1",
    "envalid": "^8.1.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.16.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.14.0",
    "prom-client": "^15.1.3",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zklib-js": "^1.3.5"
